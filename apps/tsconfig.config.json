{
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "inlineSourceMap": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es5",
        "module": "commonjs",
        "lib": ["es5", "es6", "es2017"],
        "strictPropertyInitialization": false
    }
}
